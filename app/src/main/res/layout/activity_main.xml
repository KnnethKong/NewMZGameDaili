<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/ll_space"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"/>
    <RelativeLayout
        android:id="@+id/rlBottomTabTopbar"
        style="@style/topbar_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvBottomTabTitle"
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="首页" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flBottomTabFragmentContainer"
        style="@style/match_match"
        android:layout_weight="1"
        android:background="@color/activity_bg"></FrameLayout>

    <View style="@style/divider_horizontal_1px_gray" />

    <LinearLayout
        style="@style/ll_horizontal_match_wrap"
        android:layout_height="@dimen/bottombar_height"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/llBottomTabTab0"
            style="@style/ll_vertical_match_match"
            android:layout_width="0dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivBottomTabTab0"
                style="@style/img_btn"
                android:src="@mipmap/fot1" />

            <TextView
                android:id="@+id/tvBottomTabTab0"
                style="@style/text_micro"
                android:visibility="gone"
                android:text="首页"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomTabTab1"
            style="@style/ll_vertical_match_match"
            android:layout_width="0dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivBottomTabTab1"
                style="@style/img_btn"
                android:src="@mipmap/fot2" />

            <TextView
                android:id="@+id/tvBottomTabTab1"
                style="@style/text_micro"
                android:visibility="gone"
                android:text="优秀楼盘" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llBottomTabTab2"
            style="@style/ll_vertical_match_match"
            android:layout_width="0dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivBottomTabTab2"
                style="@style/img_btn"
                android:src="@mipmap/fot_cf" />

            <TextView
                android:id="@+id/tvBottomTabTab2"
                style="@style/text_micro"
                android:visibility="gone"
                android:text="俱乐部" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomTabTab3"
            style="@style/ll_vertical_match_match"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivBottomTabTab3"
                style="@style/img_btn"
                android:src="@mipmap/fot3r" />

            <TextView
                android:id="@+id/tvBottomTabTab3"
                style="@style/text_micro"
                android:visibility="gone"
                android:text="优惠购房" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>