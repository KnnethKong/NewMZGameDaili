<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2">
    <include layout="@layout/header_title"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color_light"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">
     <RadioGroup
         android:id="@+id/radio_group"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center"
        android:background="@mipmap/club_radio_bg" >

         <RadioButton
             android:id="@+id/radio_left"
             android:layout_width="wrap_content"

            android:gravity="center"
             android:layout_height="match_parent"
             android:button="@null"
             android:checked="true"
             android:paddingBottom="5dp"
             android:paddingTop="5dp"
             android:layout_marginRight="20dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:drawablePadding="5dp"
             android:drawableLeft="@drawable/create_club_radio"
             android:text="高级俱乐部"/>

         <RadioButton
             android:id="@+id/radio_right"
             android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:gravity="center"
             android:drawablePadding="5dp"
             android:layout_height="match_parent"
             android:button="@null"
             android:paddingBottom="5dp"
             android:paddingTop="5dp"


             android:drawableLeft="@drawable/create_club_radio"
             android:text="普通俱乐部"/>
     </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"

        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/head_relate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"/>
            <com.work.nzqpdaili.view.CircleImageView
                android:id="@+id/head"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/mo_toux"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"

            android:background="#F2F2F2"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="俱乐部名称"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/create_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:hint="请输入俱乐部名称"
                android:background="@null"
                android:textColorHint="@color/alpha_6"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"

            android:background="#F2F2F2"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/create_miaoshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:hint="请输入描述"
                android:background="@null"
                android:maxLength="50"
                android:textColorHint="@color/alpha_6"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"

            android:background="#F2F2F2"
            android:layout_height="20dp" />
        <LinearLayout
            android:id="@+id/is_pt"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户充卡"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/create_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:inputType="number"
                android:hint="请输入房卡数量"
                android:textColorHint="@color/alpha_6"
                android:background="@null"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/create_que"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/club_que"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/club_zhuyi"/>
    <TextView
        android:id="@+id/is_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="高级俱乐部: 玩家创建房间，消耗俱乐部房卡，不消耗创建者房卡"
        android:drawablePadding="10dp"
        />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
